#Masks and Blank Tile.   Make sure your masks come first because their linear offest must be less than 255 

#SPR "name",             duration(Sec),  loop(Y/N), Random(Y/N)  "image1" "image2" ..
SPR "tx-blank"             0             N          N           "mt64_blank.png"
SPR "tx-dirt"              0             N          N           "mt64_dirt.png" 
SPR "tx-grass"             0             N          N           "mt64_grass.png" 
SPR "tx-grass-dirt-side"   0             N          N           "mt64_grass_dirt_side.png" 

########################################################################
#Base Tiles
########################################################################
#rainforest 1750 - 2000 mm
#subtropical 750 and 1,270
#tundra 15 - 25cm
#TIL ["name"]     [Matter] [index] [minmax temp] [min/max prec] [minmax depth] [minmax light]   [Rarity] [Top] [Side (optional)] [Bot (optional)]
TIL "t-grass"         S      0          0  30         75 150         -i  i          0.4  0.8       1.0    "tx-grass" "tx-grass-dirt-side" "tx-dirt"
TIL "t-dirt"          S      1         -i   i         -i   i         -i  i          0.0  1.0       1.0    "tx-dirt" 

######################################################################################
#Morph Tiles
######################################################################################
# Tiles morph into each other based on parameters.
# Temperature (c), Precip(cm), Depth (m), Sunlight [0,1],    Rarity [0,1] 1 = Common
MT_BEG "bt-grass"   
MT_TIL "t-grass"             
MT_END

################################################################
# WALKERS
################################################################
#For a more seamless world, set all walkers "Locale" to World "W"
#So walkers can represent pressure, temperature and erosion "extremes" 
WK_BEG "Plains" # begin walker, name
WK_TYPE tile    # type: cave, tile
WK_LOCALE W	    # locality [Locality: glob or lair G/L or Walker --- we should specify this.]
WK_BRANCH 0 1   # max child branches
WK_HOP 100 500	# volume global hop count
#WK_PRESSURE_ADD 0 500  #pressure is actually "meters under ground"
#WK_TEMP_ADD -30 30
#How to modify densiites.  0 = set to zero, 1 = set to 1
#1 = create, 0 = destroy
WK_DV_0 0.0
WK_DV_1 1.0
WK_MT

#movement left, right, down, up, back, front 
#movement [probability] [min] [max]
WK_MOVE_P 0.25 0.25 0.07 0.07 0.25 0.25  

#Min/ max movement along axes RELATIVE to start position.
WK_MINMAX_X -i i
WK_MINMAX_Y -5 5
WK_MINMAX_Z -i i

WK_END				# end walker definition

