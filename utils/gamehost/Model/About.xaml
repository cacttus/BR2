                 Height="118" FontSize="12px" TextWrapping="Wrap" 
                 HorizontalAlignment="Stretch"/>
        
        
        <Button Background="White" Margin="81,30,86,10" Width="94"  x:Name="btnOK" Click="btnOK_Click" >
            <StackPanel Orientation="Horizontal">
                <StackPanel Orientation="Horizontal">
                    <iconPacks:PackIconMaterial Kind="Check" VerticalAlignment="Center" HorizontalAlignment="Center" />
                </StackPanel>
            </StackPanel>
        </Button>
    </StackPanel>
</Controls:MetroContentControl>
