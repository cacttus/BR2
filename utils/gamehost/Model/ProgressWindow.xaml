<Window x:Class="GameHost.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameHost"
        mc:Ignorable="d"
        Title="Progress" Height="116.314" Width="538.771" ResizeMode="NoResize" SizeToContent="Height" Closing="Window_Closing">
    <StackPanel Margin="20,20,20,20">
        <ProgressBar HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="498" x:Name="_pbProgress" Maximum="1000" Foreground="#FF0ABBF0" RenderTransformOrigin="0.5,0.5">
            <ProgressBar.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="-37.956"/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </ProgressBar.RenderTransform>
        </ProgressBar>
        <Label Content="Progress Status" Margin="20,0,0,0" FontStyle="Italic" Foreground="LightGray" x:Name="_lblStatusMsg"/>
    </StackPanel>
</Window>
